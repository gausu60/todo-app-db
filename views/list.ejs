<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo Task</title>
    <link rel="stylesheet" href="./css/styles.css">
</head>

<body>
    <div class="box" id="heading">
        <h1>
            <%= kindOfDay %>!
        </h1>
    </div>
    <div class="box">
        <% newListItem.forEach((item)=>{ %>
            <form method="post" action="/delete">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()" />
                    <p>
                        <%= item.name %>
                    </p>
    
                </div>
                <input type="hidden" name="listName" value="<%= kindOfDay %>" /> 

            </form>
            

        <% }) %>
        <form class="item" method="post" action="/">
            <input type="text" name="newItem" placeholder="New Task" autofocus="off" />
            <button type="submit" name="list" value="<%= kindOfDay %>">+</button>

        </form>

    </div>
    <%- include('footer'); -%>
</body>

</html>